# ──────────────────────────────────────────────────────────────────────────────
# Polyglot Data Export Engine – Environment Variables
# Copy this file to .env and fill in the values before running docker-compose
# ──────────────────────────────────────────────────────────────────────────────

# Full PostgreSQL connection string for the application container
# Format: postgresql://<user>:<password>@<host>:<port>/<database>
DATABASE_URL=postgresql://user:password@db:5432/exports_db

# HTTP port the Express server listens on inside the container (exposed on host)
PORT=8080

# PostgreSQL credentials (used by the db service)
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=exports_db

# Number of rows fetched per cursor batch (tune for memory/throughput trade-off)
# Lower = less memory pressure; Higher = fewer round-trips to DB
DB_CURSOR_BATCH_SIZE=500

# Node environment
NODE_ENV=production
